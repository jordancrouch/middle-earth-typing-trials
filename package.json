{
  "name": "middle-earth-typing-trials",
  "version": "1.0.0",
  "description": "An interactive typing test using character quotes from the LotR films.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch-css": "npx @tailwindcss/cli -i ./assets/css/input.css -o ./assets/css/output.css --watch",
    "prettier-watch": "onchange \"./**/*\" -- prettier --write --ignore-unknown {{changed}}",
    "http-server": "http-server",
    "dev": "npm-run-all --parallel watch-css prettier-watch http-server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jordancrouch/middle-earth-typing-trials.git"
  },
  "author": "Jordan Crouch",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jordancrouch/middle-earth-typing-trials/issues"
  },
  "homepage": "https://github.com/jordancrouch/middle-earth-typing-trials#readme",
  "devDependencies": {
    "@tailwindcss/cli": "^4.0.8",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "prettier": "^3.5.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4.0.8"
  }
}